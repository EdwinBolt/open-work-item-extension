{
  "manifest_version": 3,
  "name": "Open Azure DevOps Work Item",
  "version": "1.3",
  "description": "Quickly open a work item in Azure DevOps or Jira by entering its ID (configurable base URL).",
  "icons": {
	"16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Work Item",
	"default_icon": {
	  "16": "assets/icons/icon16.png",
	  "32": "assets/icons/icon32.png"
	}
  },
  
  "options_page": "options.html",
  "permissions": ["storage", "tabs"]
}
